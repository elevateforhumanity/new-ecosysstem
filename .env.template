# ===================================================================
# EFH Platform Environment Configuration Template
# Copy this to .env and fill in your actual values
# ===================================================================

# === REQUIRED FOR 95K+ PAGE SYSTEM ===
# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT].supabase.co:5432/postgres

# Supabase Configuration  
SUPABASE_URL=https://[YOUR_PROJECT].supabase.co
SUPABASE_ANON_KEY=[YOUR_ANON_KEY]
SUPABASE_SERVICE_ROLE=[YOUR_SERVICE_ROLE_KEY]

# === OPTIONAL SERVICES ===
# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_[YOUR_PUBLISHABLE_KEY]
STRIPE_SECRET_KEY=sk_test_[YOUR_SECRET_KEY]

# SendGrid Email Service
SENDGRID_API_KEY=SG.[YOUR_API_KEY]

# Twilio SMS Service
TWILIO_ACCOUNT_SID=AC[YOUR_ACCOUNT_SID]
TWILIO_AUTH_TOKEN=[YOUR_AUTH_TOKEN]
TWILIO_PHONE_NUMBER=+1234567890

# Cloudflare R2 Storage (for 95k+ pages assets)
R2_ACCOUNT_ID=[YOUR_CLOUDFLARE_ACCOUNT_ID]
R2_ACCESS_KEY_ID=[YOUR_R2_ACCESS_KEY]
R2_SECRET_ACCESS_KEY=[YOUR_R2_SECRET_KEY]
R2_BUCKET=elevate-pages

# GitHub Integration (for automated sitemaps)
GITHUB_TOKEN_REPO=[YOUR_GITHUB_TOKEN_WITH_WORKFLOW_SCOPE]

# Optional Replit Backend
REPLIT_BASE_URL=https://[YOUR_REPL].repl.co

# === DEVELOPMENT SETTINGS ===
NODE_ENV=development
LOG_LEVEL=info
JWT_SECRET=change_me_to_a_secure_random_value

# Analytics
VITE_ANALYTICS_ID=GA-XXXXXXX

# ===================================================================
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all [YOUR_*] placeholders with actual values
# 3. Run: node config-manager.js to verify configuration
# 4. Run: node supabase-connection-script.js to test connections
# ===================================================================