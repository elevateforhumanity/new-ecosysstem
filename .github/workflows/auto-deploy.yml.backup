name: Auto Deploy to Netlify

on:
  push:
    branches: [ main ]
    paths:
      - '**.html'
      - '**.css'
      - '**.js'
      - '**.json'
      - '**.md'
      - '**.xml'
      - '**.txt'
      - '_redirects'
      - '_headers'
      - 'netlify.toml'
  workflow_dispatch:

concurrency:
  group: auto-deploy-${{ github.ref }}
  cancel-in-progress: true

jobs:
  auto-deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      deployments: write
    
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci --legacy-peer-deps

      - name: Build ultra-chunked sitemaps (marketing)
        run: |
          echo "Generating ultra-tiny sitemaps (2k per file)..."
          # Ensure URL list exists
          if [ ! -f "all-urls.txt" ]; then
            echo "Creating comprehensive URL list..."
            cat > all-urls.txt << EOF
          https://www.elevateforhumanity.org/
          https://www.elevateforhumanity.org/about/
          https://www.elevateforhumanity.org/contact/
          https://www.elevateforhumanity.org/employers/
          https://www.elevateforhumanity.org/programs/
          https://www.elevateforhumanity.org/programs/cybersecurity/
          https://www.elevateforhumanity.org/programs/cloud-computing/
          https://www.elevateforhumanity.org/programs/healthcare-cna/
          https://www.elevateforhumanity.org/programs/electrical-trades/
          https://www.elevateforhumanity.org/programs/construction/
          https://www.elevateforhumanity.org/programs/beauty-wellness/
          https://www.elevateforhumanity.org/blog/
          https://www.elevateforhumanity.org/privacy/
          https://www.elevateforhumanity.org/terms/
          https://www.elevateforhumanity.org/sitemap.html
          EOF
          fi
          # Generate ultra-chunked sitemaps (2k per file)
          node scripts/sitemap-partitioner.mjs --base=https://www.elevateforhumanity.org --in=all-urls.txt --out=sites/marketing/sitemaps --chunk=2000
          node -e "require('fs').writeFileSync('sites/marketing/robots.txt','User-agent: *\nAllow: /\nSitemap: https://www.elevateforhumanity.org/sitemap_index.xml\n')"
          # Auto-commit sitemap updates
          git config user.name "efh-bot"
          git config user.email "bot@elevateforhumanity.org"
          git add sites/marketing/sitemap_index.xml sites/marketing/sitemaps sites/marketing/robots.txt || true
          git commit -m "chore: refresh ultra-chunked sitemaps (2k per file)" || echo "no sitemap changes"
          git push || true
          echo "‚úÖ Ultra-tiny sitemaps generated and committed"

      - name: Build site
        run: |
          echo "Building static site..."
          # Copy essential files to ensure they're included
          cp robots.txt sitemap*.xml _redirects _headers . 2>/dev/null || true
          echo "‚úÖ Build completed"

      - name: Deploy to Netlify
        uses: nwtgck/actions-netlify@v3.0
        with:
          publish-dir: '.'
          production-branch: main
          github-token: ${{ secrets.GITHUB_TOKEN }}
          deploy-message: "Auto-deploy: ${{ github.event.head_commit.message }}"
          enable-pull-request-comment: false
          enable-commit-comment: true
          overwrites-pull-request-comment: false
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
          NETLIFY_SITE_ID: ${{ secrets.NETLIFY_SITE_ID }}

      - name: Verify deployment
        run: |
          echo "üåç Site deployed successfully!"
          echo "üìä Deployment details:"
          echo "- Branch: ${{ github.ref_name }}"
          echo "- Commit: ${{ github.sha }}"
          echo "- Message: ${{ github.event.head_commit.message }}"
          echo "‚úÖ Auto-deploy completed"