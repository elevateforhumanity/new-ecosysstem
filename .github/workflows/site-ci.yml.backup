name: EFH Site CI/CD

on:
  workflow_dispatch: {}
  push:
    branches: [main, master]
  pull_request:
    branches: [main, master]
  schedule:
    - cron: "0 7 * * *" # Daily at 7 AM UTC

jobs:
  verify-redirects:
    name: Verify Redirects
    runs-on: ubuntu-latest
    if: github.event_name != 'schedule'
    
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          
      - name: Verify production redirects
        run: |
          node infra/scripts/verify-redirects.mjs --base=https://elevateforhumanity.org || true
        continue-on-error: true

  build-and-test:
    name: Build & Test Sites
    runs-on: ubuntu-latest
    
    strategy:
      matrix:
        site: [marketing, programs, blog]
        
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'
          
      - name: Install dependencies
        run: npm ci || npm install
        
      - name: Build ${{ matrix.site }} site
        run: npm run build:${{ matrix.site }}
        
      - name: Test ${{ matrix.site }} site structure
        run: |
          if [ -f "sites/${{ matrix.site }}/index.html" ]; then
            echo "✅ ${{ matrix.site }} site has index.html"
          else
            echo "❌ ${{ matrix.site }} site missing index.html"
            exit 1
          fi
          
      - name: Upload ${{ matrix.site }} artifacts
        uses: actions/upload-artifact@v4
        with:
          name: ${{ matrix.site }}-site
          path: sites/${{ matrix.site }}/
          retention-days: 7

  generate-sitemaps:
    name: Generate Sitemaps
    runs-on: ubuntu-latest
    if: github.event_name == 'schedule' || github.event_name == 'workflow_dispatch'
    
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'
          
      - name: Install dependencies
        run: npm ci || npm install
        
      - name: Generate sitemaps
        run: |
          node infra/scripts/crawl-site.mjs --base=https://elevateforhumanity.org --max=150000
        continue-on-error: true
        
      - name: Commit sitemap updates
        run: |
          git config user.name "efh-bot"
          git config user.email "bot@elevateforhumanity.org"
          git add sites/marketing/sitemap_index.xml sites/marketing/sitemaps/ || true
          git commit -m "chore: refresh sitemaps [skip ci]" || echo "no changes"
          git push || true
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

  lighthouse-audit:
    name: Lighthouse Audit
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'
    
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          
      - name: Install Lighthouse CI
        run: npm install -g @lhci/cli@0.12.x
        
      - name: Run Lighthouse CI
        run: |
          lhci autorun --upload.target=temporary-public-storage || true
        env:
          LHCI_GITHUB_APP_TOKEN: ${{ secrets.GITHUB_TOKEN }}

  security-scan:
    name: Security Scan
    runs-on: ubuntu-latest
    if: github.event_name != 'schedule'
    
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        
      - name: Run Trivy vulnerability scanner
        uses: aquasecurity/trivy-action@master
        with:
          scan-type: 'fs'
          scan-ref: '.'
          format: 'sarif'
          output: 'trivy-results.sarif'
          
      - name: Upload Trivy scan results
        uses: github/codeql-action/upload-sarif@v3
        if: always()
        with:
          sarif_file: 'trivy-results.sarif'

  deploy-preview:
    name: Deploy Preview
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'
    needs: [build-and-test]
    
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        
      - name: Download marketing site
        uses: actions/download-artifact@v4
        with:
          name: marketing-site
          path: sites/marketing/
          
      - name: Deploy to Netlify Preview
        uses: nwtgck/actions-netlify@v3.0
        with:
          publish-dir: './sites/marketing'
          production-branch: main
          github-token: ${{ secrets.GITHUB_TOKEN }}
          deploy-message: "Deploy from GitHub Actions"
          enable-pull-request-comment: true
          enable-commit-comment: true
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
          NETLIFY_SITE_ID: ${{ secrets.NETLIFY_MARKETING_SITE_ID }}

  notify-completion:
    name: Notify Completion
    runs-on: ubuntu-latest
    needs: [verify-redirects, build-and-test, generate-sitemaps]
    if: always()
    
    steps:
      - name: Notify success
        if: needs.build-and-test.result == 'success'
        run: |
          echo "✅ All checks passed! Site is ready for deployment."
          
      - name: Notify failure
        if: needs.build-and-test.result == 'failure'
        run: |
          echo "❌ Some checks failed. Please review the logs."
          exit 1