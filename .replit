modules = ["postgresql-16", "nodejs-20", "python-3.11"]
run = "node simple-server.cjs"

[deployment]
run = ["sh", "-c", "npm run start"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "cd client && npm install && npm run build && cd .. && npm run validate"]

[nix]
channel = "stable-25_05"
packages = ["jq", "zip"]

[[ports]]
localPort = 5000
externalPort = 80

[agent]

[workflows]
runButton = "EFH Production Server"

[[workflows.workflow]]
name = "EFH Production Server"
mode = "sequential"
author = 46393221

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-server.cjs"

[[workflows.workflow]]
name = "Validate Production Readiness"
author = 46393221
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run validate"

[[workflows.workflow]]
name = "Backend API Server"
author = 46393221
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node backend-api.js"

[[workflows.workflow]]
name = "Optimize Storage"
author = 46393221
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node tools/storage-optimizer.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node asset-cache-manager.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node tools/image-optimizer.js"
