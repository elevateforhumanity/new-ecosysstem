{
  "name": "workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready plain Vite + TypeScript skeleton",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format": "prettier -w .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "analyze": "vite build && npx rollup-plugin-visualizer dist/stats.html",
    "env:check": "ts-node --swc src/env.ts --check",
    "security:audit": "npm audit --omit=dev",
    "security:full": "npm audit",
    "size:check": "node scripts/size-check.mjs",
    "check:prod": "node scripts/prod-check.mjs",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build && npm run size:check",
    "polish:all": "npm run format && npm run ci && npm run check:prod",
    "release:tag": "node scripts/release-tag.mjs"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.2.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.20.1"
  },
  "keywords": [],
  "homepage": ".",
  "bugs": {},
  "repository": {},
  "packageManager": "npm"
}
