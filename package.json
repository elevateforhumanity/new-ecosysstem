{
  "name": "workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready plain Vite + TypeScript skeleton",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc server/main.ts --outDir dist/server --module ESNext --target ES2022 --moduleResolution Node --esModuleInterop --allowSyntheticDefaultImports",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format": "prettier -w .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "analyze": "vite build && npx rollup-plugin-visualizer dist/stats.html",
    "env:check": "ts-node --swc src/env.ts --check",
    "security:audit": "npm audit --omit=dev",
    "security:full": "npm audit",
    "size:check": "node scripts/size-check.mjs",
    "check:prod": "node scripts/prod-check.mjs && node scripts/verify-production.mjs",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build && npm run size:check",
    "polish:all": "npm run format && npm run ci && npm run check:prod",
    "release:tag": "node scripts/release-tag.mjs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.2.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.0.0",
    "pino-http": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.15.0",
    "stripe": "^18.5.0",
    "tailwindcss": "^4.1.13"
  },
  "keywords": [],
  "homepage": ".",
  "bugs": {},
  "repository": {},
  "packageManager": "npm@10.0.0"
}
