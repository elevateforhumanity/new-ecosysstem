{
  "name": "workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready plain Vite + TypeScript skeleton",
  "license": "MIT",
  "type": "module",
  "engines": { "node": ">=20.0.0" },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format": "prettier -w .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "analyze": "vite build && npx rollup-plugin-visualizer dist/stats.html",
    "env:check": "ts-node --swc src/env.ts --check",
    "security:audit": "npm audit --omit=dev",
    "security:full": "npm audit",
    "size:check": "node scripts/size-check.mjs",
    "check:prod": "node scripts/prod-check.mjs",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build && npm run size:check",
    "polish:all": "npm run format && npm run ci && npm run check:prod",
    "release:tag": "node scripts/release-tag.mjs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.2.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "ts-node": "^10.9.2",
    "zod": "^3.23.8"
  },
  "dependencies": {},
  "keywords": [],
  "homepage": ".",
  "bugs": {},
  "repository": {},
  "optionalDependencies": {},
  "packageManager": "npm"
}
