{
  "name": "workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint -c .eslintrc.cjs . --ext .js,.jsx,.ts,.tsx --cache",
    "format": "prettier -w .",
    "typecheck": "tsc --noEmit",
    "check:imports": "node scripts/check-missing-imports.mjs",
    "check:links": "npm run build && npx broken-link-checker http://localhost:4173 --recursive --ordered || true",
    "polish:all": "npm run lint -- --fix && npm run format && npm run typecheck && npm run build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^15.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0"
  }
}
