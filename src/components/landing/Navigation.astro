    <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200">
      <div class="py-4 space-y-2">
        <a href="/programs.html" class="block px-4 py-2 text-gray-700 hover:bg-gray-50 hover:text-primary-600">Programs</a>
