    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center mr-3">
