---
const programs = [
  {
    title: "Medical Assistant Certification",
    duration: "12 weeks",
    placement: "94%",
    salary: "$16-22/hour",
    description: "Comprehensive training in clinical and administrative medical procedures",
    features: ["Clinical Skills", "EHR Training", "Externship Included", "Industry Certification"]
  },
  {
    title: "IT Support Specialist",
    duration: "16 weeks", 
    placement: "87%",
    salary: "$18-25/hour",
    description: "CompTIA A+ preparation and hands-on technical support training",
    features: ["CompTIA A+ Prep", "Help Desk Training", "Network Basics", "Job Placement Support"]
  },
  {
    title: "HVAC Technician",
    duration: "20 weeks",
    placement: "91%", 
    salary: "$20-28/hour",
    description: "Complete HVAC installation, maintenance, and repair training",
    features: ["EPA Certification", "Hands-on Lab", "Safety Training", "Apprenticeship Pathways"]
  }
];
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        High-Demand Career Programs
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Industry-aligned training programs designed to meet Ohio's workforce needs. 
        All programs include job placement assistance and industry certifications.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {programs.map((program) => (
        <div class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition-shadow duration-300">
          <div class="mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">
              {program.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {program.description}
            </p>
          </div>
          
          <div class="grid grid-cols-3 gap-4 mb-6">
            <div class="text-center">
              <div class="text-2xl font-bold text-primary-600">
                {program.duration}
              </div>
              <div class="text-sm text-gray-500">Duration</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-secondary-600">
                {program.placement}
              </div>
              <div class="text-sm text-gray-500">Job Placement</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-accent-600">
                {program.salary}
              </div>
              <div class="text-sm text-gray-500">Starting Pay</div>
            </div>
          </div>
          
          <div class="mb-6">
            <h4 class="font-semibold text-gray-900 mb-3">Program Includes:</h4>
            <ul class="space-y-2">
              {program.features.map((feature) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-4 h-4 text-secondary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
          
          <a 
            href="/programs.html" 
            class="block w-full bg-primary-600 hover:bg-primary-700 text-white text-center py-3 rounded-lg font-semibold transition-colors duration-200"
          >
            Learn More
          </a>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/programs.html" 
        class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold"
      >
        View All Programs
        <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>